<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config />

    <bean name="movie, movieA" class="com.stackroute.domain.Movie" scope="prototype" autowire="byName"/>
    <bean id="movieB" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" type="com.stackroute.domain.Actor" ref="actor1"/>
    </bean>

    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="Sreenath" />
        <constructor-arg name="gender" value="Male" />
        <constructor-arg name="age" value="23" />
    </bean>

    <bean name="actor" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Febin" />
        <constructor-arg index="1" value="Female" />
        <constructor-arg index="2" value="22" />
    </bean>



</beans>